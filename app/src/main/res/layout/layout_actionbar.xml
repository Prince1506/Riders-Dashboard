<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/logo_icon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_border"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/action_bar_bottom_padding"
    android:paddingLeft="@dimen/action_bar_left_padding"
    android:paddingRight="@dimen/action_bar_right_padding"
    android:paddingTop="@dimen/action_bar_top_padding">

    <TextView
        android:id="@+id/tv_screen_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/back_blue"
        android:drawablePadding="@dimen/actionbar_drawable_padding"
        android:fontFamily="arial"
        android:gravity="left"
        android:paddingLeft="@dimen/actionbar_heading_left_padding"
        android:paddingRight="@dimen/actionbar_heading_right_padding"
        android:textColor="@color/white"
        android:textSize="@dimen/actionbar_heading_size"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_screen_heading_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/actionbar_heading_name_drawable_pad"
        android:fontFamily="arial"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/history"
        android:textColor="#CCCCCC"
        android:textSize="@dimen/actionbar_heading_name_text"
        android:visibility="gone" />

    <!-- <View
         android:id="@+id/view_manage_about_logo"
         android:layout_width="0dp"
         android:layout_height="2dp"
         android:layout_weight="1"
         android:visibility="gone"/>-->

    <LinearLayout
        android:id="@+id/layout_netvelocity_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/actionbar_logo_margin_left"
        android:gravity="left"
        android:orientation="horizontal"
        android:visibility="visible">


        <ImageView
            android:id="@+id/img_netvelocity_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/actionbar_logo_right_pad"
            android:src="@drawable/rydr_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/text_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:paddingRight="@dimen/actionbar_more_padding_right"
            android:text="@string/more"
            android:textColor="@color/ligth_blue"
            android:textSize="@dimen/actionbar_more_size" />
    </LinearLayout>
</LinearLayout>